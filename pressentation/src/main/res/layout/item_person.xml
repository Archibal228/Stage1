<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#d7d7d7">
<TextView
    android:id="@+id/id_person"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="40sp"/>
    <TextView
        android:id="@+id/name_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/id_person"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/lastname_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name_person"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/age_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_person"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_person"
        android:layout_toRightOf="@+id/age_person"
        android:textSize="40sp"/>
</RelativeLayout>